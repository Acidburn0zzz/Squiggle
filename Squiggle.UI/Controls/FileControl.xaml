<UserControl x:Class="Squiggle.UI.Controls.FileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Squiggle.UI"
    x:Name="fc" Height="40" Cursor="Hand">
    <UserControl.Resources>
        <local:FileToIconConverter x:Key="fic" />
    </UserControl.Resources>
    <StackPanel DataContext="{Binding ElementName=fc, Path=DataContext}" Orientation="Horizontal" >
        <Image x:Name="img" Height="32" Width="32" 
                           ToolTip="{Binding Converter={x:Static local:PathToNameConverter.Instance}}">
            <Image.Source>
                <MultiBinding Converter="{StaticResource fic}">
                    <Binding />
                </MultiBinding >
            </Image.Source>
        </Image>
        <StackPanel Margin="5,0,0,0" Orientation="Vertical">
            <TextBlock  Text="{Binding Converter={x:Static local:PathToNameConverter.Instance}}"
                                   TextTrimming="CharacterEllipsis"/>
            <TextBlock Text="{Binding ElementName=fc, Path=Status}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
