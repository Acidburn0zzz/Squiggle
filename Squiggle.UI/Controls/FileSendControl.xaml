<UserControl x:Class="Squiggle.UI.Controls.FileSendControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="File transfer request sent to user and waiting for acceptance." Margin="0,5,5,5"/>
        <StackPanel Grid.Row="1" x:Name="stkAccepted" Orientation="Horizontal" Visibility="Hidden">
            <ProgressBar x:Name="progress" Width="200"/>
            <Button Content="Cancel" Width="60" Margin="5,0,0,0" Click="Cancel_Click" />
        </StackPanel>
        <StackPanel Grid.Row="1" x:Name="stkCancelled" Orientation="Horizontal" Visibility="Hidden">
            <TextBlock Text="User has rejected to receive the file"/>
        </StackPanel>
        <StackPanel Grid.Row="1" x:Name="stkCompleted" Orientation="Horizontal" Visibility="Hidden">
            <TextBlock x:Name="txbCompleted" Text="File successfully transfered"/>
        </StackPanel>
    </Grid>
</UserControl>
