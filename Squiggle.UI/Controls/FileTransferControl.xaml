<UserControl x:Class="Squiggle.UI.Controls.FileTransferControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="fileTransferControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="stkInvitation" Orientation="Horizontal">
            <TextBlock Text="{Binding ElementName=fileTransferControl, Path=FileName}"/>
            <Button Content="Accept" Width="60" Margin="5,0,0,0" Click="Accept_Click" />
            <Button Content="Save As" Width="60" Margin="5,0,0,0" Click="SaveAs_Click"  />
            <Button Content="Reject" Width="60" Margin="5,0,0,0" Click="Reject_Click"/>
        </StackPanel>
        <StackPanel x:Name="stkAccepted" Orientation="Horizontal" Visibility="Hidden">
            <ProgressBar x:Name="progress" Width="200"/>
            <Button Content="Cancel" Width="60" Margin="5,0,0,0" Click="Reject_Click" />
        </StackPanel>
        <StackPanel x:Name="stkCancelled" Orientation="Horizontal" Visibility="Hidden">
            <TextBlock Text="User has rejected to receive the file"/>
        </StackPanel>

    </Grid>
</UserControl>
