<UserControl x:Class="Squiggle.UI.Controls.DisplayMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="UserControl1" Loaded="UserControl1_Loaded">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="MessageEditBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFF6F6F8" Offset="0.027"/>
            <GradientStop Color="#FFC7C8CC" Offset="0.973"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    <Grid>
        <Border Opacity="9" Margin="5" Padding="5,0,2,0" Background="{StaticResource MessageEditBackground}" CornerRadius="5" Height="22">
            <Grid>
                <TextBlock  Background="Transparent" x:Name="txbDefaultMessage" Foreground="Gray" Text="Share a quick message here" MouseDown="txbMessage_MouseDown" />
                <TextBlock  Background="Transparent" x:Name="txbMessage" Foreground="Gray" Text="{Binding ElementName=UserControl1, Path=Text}" MouseDown="txbMessage_MouseDown" Visibility="Hidden" />
                <TextBox Background="Transparent" BorderBrush="Transparent" BorderThickness="0" x:Name="txtMessage" Text="{Binding ElementName=UserControl1, Path=Text}" Visibility="Hidden"  KeyUp="txtMessage_KeyUp" LostFocus="txtMessage_LostFocus"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
