<Window x:Class="Messenger.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Squiggle Messenger" Height="400" Width="300" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="ContactInfoToolTipStyle" TargetType="{x:Type ToolTip}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToolTip}">
                        <Border BorderBrush="#111111" BorderThickness="1" SnapsToDevicePixels="True">
                            <Border Width="Auto" Height="Auto" Name="windowFrame" BorderBrush="#999999" BorderThickness="1" SnapsToDevicePixels="True" CornerRadius="0" Background="#525252" TextBlock.Foreground="White" TextBlock.FontFamily="Verdana" TextBlock.FontSize="11" Margin="0" Padding="3">
                                <ContentPresenter />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="ContactInfoBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFCFCFD" Offset="0.04"/>
            <GradientStop Color="#FFE5E5F1" Offset="0.99"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="HeaderBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF1C8FB4" Offset="0"/>
            <GradientStop Color="#FF1F9BBA" Offset="1"/>
            <GradientStop Color="#FF01448B" Offset="0.517"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ToolbarBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDEECF6" Offset="0"/>
            <GradientStop Color="#FFDEEDF4" Offset="1"/>
            <GradientStop Color="#FFC2DDED" Offset="0.517"/>
        </LinearGradientBrush>
        <Style x:Key="StatusStyle" TargetType="Border">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Background" Value="Red"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Online">
                    <Setter Property="Background" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Idle">
                    <Setter Property="Background" Value="Gray"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="{StaticResource HeaderBackground}" Height="50">
            <Grid DataContext="{Binding Path=CurrentUser}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.75*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.50*"/>
                    <RowDefinition Height="0.50*"/>
                </Grid.RowDefinitions>
                <Image Source="Images/8.png" Height="40" Grid.RowSpan="2"/>
                <StackPanel x:Name="signedInView" Visibility="Hidden" Grid.Column="1" Orientation="Horizontal" >
                    <TextBlock Margin="10,0,5,0" VerticalAlignment="Bottom" Text="{Binding DisplayName}" Foreground="White" FontWeight="Bold" x:Name="txtLoggedInUser" HorizontalAlignment="Left" />
                    <ComboBox Background="{StaticResource HeaderBackground}" VerticalAlignment="Bottom" Height="20" Foreground="White" Grid.Column="1" HorizontalAlignment="Left">
                        <ComboBoxItem Content="Online" IsSelected="True"/>
                        <ComboBoxItem Content="Busy" />
                        <ComboBoxItem Content="Offline" />
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Background="{StaticResource HeaderBackground}"/>
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>
                </StackPanel> 
                <StackPanel x:Name="signedOffView" Grid.Column="1">
                    <TextBlock Text="Signing in..." Margin="10,0,5,0" Grid.Column="1" VerticalAlignment="Bottom" Foreground="White"/>
                </StackPanel>
                <TextBlock Margin="10,0,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Text="{Binding DisplayMessage}" TextTrimming="WordEllipsis"  Foreground="White"/>
            </Grid>
        </Border>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <StackPanel Background="{StaticResource ToolbarBackground}" Height="25" Orientation="Horizontal">
                <Image Cursor="Hand" Source="Images\info.png" />
                <Image Cursor="Hand" Source="Images\webcam.png" />
                <Image Cursor="Hand" Source="Images\Distortions.png" />
                <Image Cursor="Hand" Source="Images\itevent.png" />
            </StackPanel>
                <ItemsControl Margin="5" DataContext="{Binding}" ItemsSource="{Binding Buddies}" >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                        <Border BorderThickness="0.5" Margin="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.2*"/>
                                    <ColumnDefinition Width="0.8*"/>
                                </Grid.ColumnDefinitions>

                                <Border ToolTip="{Binding Path=Status}"
                                        Style="{StaticResource StatusStyle}"/>
                                <TextBlock Cursor="Hand" MouseDown="TextBlock_MouseDown" Tag="{Binding}" 
                                           Text="{Binding Path=DisplayName}" HorizontalAlignment="Left" Grid.Column="1">
                                    <TextBlock.ToolTip>
                                        <ToolTip Placement="Left">
                                            <Border Width="200" CornerRadius="5" Background="{StaticResource ContactInfoBackground}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0.3*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.3*"/>
                                                        <ColumnDefinition Width="0.7*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock VerticalAlignment="Top" Text="Contact" Foreground="Black" FontWeight="Bold"/>
                                                    <Image Source="Images\man.png" Grid.Row="1"/>
                                                    <StackPanel VerticalAlignment="Center" Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                                                        <TextBlock Foreground="Black" Text="{Binding DisplayName, StringFormat=Display: \{0\}}"/>
                                                        <TextBlock Foreground="Black" Text="{Binding Status, StringFormat=Presence: \{0\}}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>    
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
