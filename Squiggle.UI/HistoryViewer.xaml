<Window x:Class="Squiggle.UI.HistoryViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HistoryViewer" Height="300" Width="586" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" >From date:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFrom" />
        <Label Grid.Row="1" Grid.Column="0" >To date:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtTo" />
        <Label Grid.Row="2" Grid.Column="0" >Message:</Label>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtMessage" />
        <Button Grid.Row="3" Grid.Column="1" Width="50" 
                HorizontalAlignment="Right" Click="Search_Click">Search</Button>
        <ListView Grid.Row="4" Grid.ColumnSpan="2" x:Name="results" MouseDoubleClick="results_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Start" DisplayMemberBinding="{Binding Start}" Width="140" />
                    <GridViewColumn Header="End" DisplayMemberBinding="{Binding End}" Width="140" />
                    <GridViewColumn Header="Participants" DisplayMemberBinding="{Binding Participants}" Width="280"  />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
